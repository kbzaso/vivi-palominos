---
import { Image } from "astro:assets";
import Nav from "./Nav.astro";

const info = {
  title: "Viaje con confianza, explore con facilidad",
  description: "Agente de viajes",
  image: "/hero-big.jpg",
  url: "https://vivipalominos.com",
  cta: "Planifica tu viaje ahora",
  ctaWsp: "https://wa.me/5699974471",
  agent: {
    name: "Viviana Palominos",
    photo: "/agent.png",
    email: "vivi@vivipalominos.com",
    phone: "+569 9997 4471",
  },
};
---

<main
  class="relative mx-auto flex h-dvh items-center justify-center bg-[var(--color-cloud)] overflow-hidden"
>
  <Nav url={info.ctaWsp} />
  <header class="absolute top-0 z-0 w-full">
    <Image
      src="/hero-big.webp"
      alt="Hero"
      class="h-[500px] w-full object-cover"
      width={1000}
      height={1000}
	  loading={"eager"}
    />
    <!-- AIRPLAIN -->
    <div>
      <Image
        src="/airplain.png"
        class="absolute top-20 right-0 z-10 w-80 md:top-20 md:right-10 md:w-[400px] lg:right-20 xl:right-48 2xl:right-80"
        alt=""
        aria-hidden="true"
        width={1000}
        height={1000}
		loading={"eager"}
      />
    </div>
    <!-- AGENT + TEXT -->
    <div class="absolute md:top-[200px] top-[350px] px-4 z-10 w-full">
      <div
        class="flex flex-col space-y-4 space-x-8 md:flex-row max-w-7xl mx-auto md:items-end w-fit"
      >
        <Image
          src="/agent.png"
          alt={info.agent.name}
          class="h-56 w-48 object-cover md:h-96 md:w-56 shadow-md"
          width={1000}
          height={1000}
		  loading={"eager"}
        />
        <div class="flex flex-col">
          <h1 class="mt-4 text-4xl font-extrabold md:w-[800px] md:text-7xl">
            {info.title}
          </h1>
          <div class="mt-4 flex flex-col md:flex-row md:space-x-4">
            <span class="text-2xl">{info.agent.name}</span>
            <a href="mailto:{info.agent.email}" class="hidden text-lg md:block underline">{info.agent.email}</a>
            <a href="tel:{info.agent.phone}" class="hidden text-lg md:block underline">{info.agent.phone}</a>
          </div>
          <a href="#" class="shadow-md bg-[var(--color-water)] mt-4 w-fit rounded-lg px-4 py-2"
            >{info.cta}</a
          >
        </div>
      </div>
    </div>
    <!-- SEPARATOR DESKTOP -->
    <div class="absolute right-0 top-56 hidden w-full md:block">
      <Image
        src="/separator.svg"
        class="w-full object-cover"
        alt=""
        aria-hidden="true"
        width={1000}
        height={1000}
		loading={"eager"}
      />
    </div>
    <!-- SEPARATOR MOBILE -->
    <div class="w-full top-44 absolute md:hidden">
      <!-- This image is decorative and serves as a visual separator -->
      <Image
        src="/separator-sm.svg"
        class="w-full object-cover"
        alt=""
        aria-hidden="true"
        width={1000}
        height={1000}
		loading={"eager"}
      />
    </div>
  </header>
</main>

