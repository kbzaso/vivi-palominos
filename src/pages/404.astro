---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
---

<Layout>
    <Nav/>
    <section class="">
        <div class="max-w-6xl h-screen px-6 py-12 mx-auto lg:flex lg:items-center lg:gap-12">
            <div class="w-full lg:w-1/2">
                <p class="text-sm font-medium text-[var(--color-sky)]">Error 404</p>
                <h1 class="mt-3 text-2xl font-semibold text-[var(--color-night)] md:text-3xl">La página que buscas no existe.</h1>
                <!-- <p class="mt-4 text-gray-500 dark:text-gray-400">Disculpa, la página que buscas no existe.</p> -->
    
                <div class="flex items-center mt-6 gap-x-3">
                    <a href="/" class="w-1/2 global-button global-focus">
                        Volver a la página principal
                    </a>
                </div>
            </div>
    
            <div class="relative w-full mt-12 lg:w-1/2 lg:mt-0">
                <Image 
                    src="/illustration.svg"
                    alt="404 error"
                    class="w-full max-w-lg lg:mx-auto"
                    width={1000}
                    height={1000}
                    loading={"lazy"}
                />
            </div>
        </div>
    </section>
</Layout>
