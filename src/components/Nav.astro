---
import Image from "astro/components/Image.astro"
import { MessageCircle } from '@lucide/astro';

const { url } = Astro.props;
---

<nav class="fixed top-0 z-20 w-full bg-white/10 p-4 backdrop-blur-sm">
    <div class="container mx-auto flex items-center justify-between max-w-6xl lg:px-4">
        <Image
            src="/isologo.svg"
            alt="Logo de vivipalominos.com"
            class="h-12 w-12"
            width={100}
            height={100}
            loading={"eager"}
        />
        <a
            href={url}
            target="_blank"
            class="bg-[var(--color-night)] hover:bg-[var(--color-night)]/90 w-fit rounded-full px-4 py-2 text-white md:mt-0 flex gap-2 global-focus text-sm items-center">Hablemos por Whatsapp <MessageCircle/></a>
    </div>
</nav>